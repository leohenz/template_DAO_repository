<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<TilePane fx:id="tilePaneLivros" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.TelaInicialController">
    <!-- Barra de Pesquisa -->
    <VBox alignment="CENTER" spacing="10" padding="20">
        <TextField fx:id="barraPesquisa" promptText="Digite para pesquisar..." prefWidth="300"/>
    </VBox>
    
    <!-- Lista de Livros -->
    <TilePane fx:id="tilePaneLivros" hgap="10" vgap="10">
        <!-- Exemplo de um livro (Este serÃ¡ preenchido dinamicamente) -->
        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="imageViewLivro" fitWidth="100" fitHeight="150" />
            <Label fx:id="labelLivro" text="Nome do Livro" />
        </VBox>
    </TilePane>
</TilePane>
